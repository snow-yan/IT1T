@import "../../css/init.wxss";
.logo{
  width: 100%;
  height: 100rpx;
  padding-bottom: 10px;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000000;
  background-color: #fff;
}
.img_logo{
  height: 50px;
  width: 159px;
}
.slide-image{
  height: 350rpx;
  width: 100%;
}
.col_list{
 text-align: center;
}
.col_list .web_ico{
  width: 60%;
}
.col_list text{
  display: inline-block;
}
.clo_three .col_list{
  margin-top: 0.5rem;
}
.case_title{
  width: 100%;
  text-align: center;
  margin-bottom: 0.5rem;
  margin-top: 0.5rem;
}
.case{
  width: 100%;
  text-align: center;
}
.case_list .col_list image{
  width: 100%;
  height: 7rem;
}
.case_list .title,.case_list .case_date{
  text-align: left;
}
.case_list .title{
  line-height: 1rem;
}
.case_list .case_date{
  line-height: 0.9rem;
}
.client{
  background-color: #2F2F2F;
}
.client image{
  width: 100%;
}
.client .col_list{
  border-bottom: 1px dotted #444;
  border-right: 1px dotted #444;
}
.news .news_list{
  width: 100%;
  margin-top: 0.5rem;
  border-bottom: 1px dotted #ccc;
  display: inline-block;
  padding-bottom: 0.5rem;
}
.news_left{
  float: left;
  width: 5rem;
  margin-right: 0.5rem;
  height: 4rem;
}
.news_right .news_title{
  font-size: 1rem;
}
.news_right .news_date{
   font-size: 0.6rem;
   line-height: 0.6rem;
}
.news{
  margin-bottom: 2rem;
}
.news_right .news_desc{
   font-size: 0.7rem;
   text-overflow: -o-ellipsis-lastline;
   overflow: hidden;text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
   line-height: 1rem;
}
.zhuan{
  animation: mymove .5s ; 
}
@keyframes mymove{
  from{
    transform: rotateY(0deg);
  }
  to{
    transform: rotateY(360deg);
    
  }
}
.return{
  width: 30px;
  height: 30px;
  position: fixed;
  bottom: 30px;
  right: 30px;
  background:orange;
  padding: 5px;
}
.return image{
  width: 100%;
}
.more{
  border: 1px solid #e0e0e0;
  padding: 10rpx 25rpx;
}
.bac_img{
  width: 68px;
  height: 68px;
  margin: 0 auto; 
}