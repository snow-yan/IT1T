@import "../../css/init.wxss";
.logo{
  width: 200px;
  height: 48px;
  margin-bottom: 0.5rem;
}
.img_logo{
  width: 100%;
  height: 48px;
}

.case_title{
  width: 100%;
  text-align: center;
  margin-bottom: 0.5rem;
  margin-top: 0.5rem;
}
.case{
  width: 100%;
  text-align: center;
}
.case_list .col_list image{
  width: 100%;
}
.case_list .title,.case_list .case_date{
  text-align: left;
}
.news .news_list{
  width: 100%;
  margin-top: 0.5rem;
  border-bottom: 1px dotted #ccc;
  display: inline-block;
  padding-bottom: 0.5rem;
}
.news_left{
  float: left;
  width: 5rem;
  margin-right: 0.5rem;
  height: 4rem;
}
.news_right .news_title{
  font-size: 1rem;
}
.news_right .news_date{
   font-size: 0.6rem;
   line-height: 0.6rem;
}
.news_right .news_desc{
   font-size: 0.7rem;
   text-overflow: -o-ellipsis-lastline;
   overflow: hidden;text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
   line-height: 1rem;
}
.news{
  margin-bottom: 2rem;
}
.banner_case image{
  width: 100%;
}
